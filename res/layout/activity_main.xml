<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Main" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minWidth="200dp"
        android:src="@drawable/eurowhite" />
    
    <TextView
        android:id="@+id/finalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="The Final"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#222" />
    
    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/view2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_menu_info_details"
        android:onClick="showAbout" />
    
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/finalText"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#aaa" />

    <TextView
        android:id="@+id/weeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#222" />

    <TextView
        android:id="@+id/andLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weeks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="and"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#aaa" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/andLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#222" />

    <TextView
        android:id="@+id/remainingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/days"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="remaining!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#aaa" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/remainingLabel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#aaa" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView01"
        android:layout_alignBottom="@+id/TextView01"
        android:layout_alignLeft="@+id/textView3"
        android:text="MalmÃ¶, Sweden"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#222" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp"
        android:text="Venue:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#aaa" />

    

    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="21dp"
        android:text="Visit eurovision.tv for more info"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:onClick="openLink"
        android:clickable="true"
        android:textColor="#222" />
        
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/andLabel"
        android:text="18th May 2013"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#222" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/remainingLabel"
        android:text="Final:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#aaa" />

    

</RelativeLayout>
</ScrollView>